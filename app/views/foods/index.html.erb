<div class="row">
  <% @foods.each do |food| %>
  <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
           <i class="fa fa-star"></i>
        <div class="caption">
        <h3> <%= link_to food.category, food %></h3> 
          <p> <i> <%= food.description %> </i> </p>
          <p>
            <%= link_to "New Review", new_food_rating_path(food), class: "btn btn-primary" %>
            <%= link_to "Edit", edit_food_path(food), class: "btn btn-default" %> 
            <%= link_to "Delete", food_path(food), method: :delete, data: { confirm: 'Are you really really really sure?' }, class: "btn btn-default" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>  
</div>

