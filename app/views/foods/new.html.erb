<form action="/foods" method="POST">
  <div class="form-group">
    <label for="name"> Name of the Movie</label>
    <input name="name" type="text" class="form-control" id="name" placeholder="Enter the name of the movie" >
  </div>

  <div class="form-group">
    <label for="summary"> Movie Summary</label>
    <input name="summary" type="text" class="form-control" id="summary" placeholder="What's it about?" >
  </div>
  
  <div class="form-group">
    <label for="year_released"> Movie Year</label>
    <input name="year_released" type="string" class="form-control" id="year_released" placeholder="What year was it released?" >
  </div>

  <button type="submit" class="btn btn-default"> Submit</button>

</form>