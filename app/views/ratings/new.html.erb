
<div class="col-sm-12">
<% if @rating.errors.any? %>
  <div class="alert alert-warning">
    <h2>Some errors kept this rating from being saved:</h2>
    <ul>
      <% @rating.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [@food, @rating] do |form| %>
  <div class="form-group">
    <%= form.label :rating %>
    <%= form.select :rating, [1,2,3,4,5], class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
  </div>
  <%= form.button 'Post Your Review', class: "btn btn-success" %>
<% end %>


