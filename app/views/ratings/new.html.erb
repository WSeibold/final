
<div class="col-sm-12">


<% if @rating.errors.any? %>
  <div class="alert alert-warning">
    <h2>Some errors kept this rating from being saved:</h2>
    <ul>
      <% @rating.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @rating do |form| %>
  <div class="form-group">

<!-- These two should feed in from somewhere else, so they don't need to be inputs -->

  <div class="form-group">
      <%= form.label :menu_id %>
      <%= form.collection_select :menu_id, Restaurant.order(:name), :id, :name, { include_blank: true }, { class: "form-control" } %>
    </div>
  
  <div class="form-group">
    <%= form.label :rating_stars %>
    <%= form.number_field :rating_stars, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :comments %>
    <%= form.text_field :comments, class: "form-control" %>
  </div>
  <%= form.button 'Rate!', class: "btn btn-success" %>
<% end %>
</div>