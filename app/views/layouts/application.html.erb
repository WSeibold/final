        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" <%= link_to "BRAND", foods_path %></a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
        <li><%= link_to "Foods", foods_path %></li>
        <li><%= link_to "Restaurants", restaurants_path %></li>
        <li><%= link_to "New Restaurant", new_restaurant_path %></li>
      </ul>

<!-- Add a search componenet to to the Navbar -->
