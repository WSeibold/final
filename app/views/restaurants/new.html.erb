

<% if @rest.errors.any? %>
  <div class="alert alert-warning">
    <h2>This didn't save because:</h2>
    <ul>
      <% @rest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

